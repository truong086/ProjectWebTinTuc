@model BTLNetCore6._0.Models.Taikhoan

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row" style="margin-left: 100px">
    <div style="width: 100%">
        <h1>Tạo tài khoản</h1>
    </div>
    <hr />
    <div>
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control" style="width: 500px" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Matkhau" class="control-label"></label>
                    <input asp-for="Matkhau" class="form-control" style="width: 500px" />
                    <span asp-validation-for="Matkhau" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phanquyen" class="control-label"></label>
                    <input asp-for="Phanquyen" class="form-control" style="width: 500px" />
                    <span asp-validation-for="Phanquyen" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Fullname" class="control-label"></label>
                    <input asp-for="Fullname" class="form-control" style="width: 500px" />
                    <span asp-validation-for="Fullname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ngaytao" class="control-label"></label>
                    <input asp-for="Ngaytao" class="form-control" style="width: 500px" />
                    <span asp-validation-for="Ngaytao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>

    


</div>