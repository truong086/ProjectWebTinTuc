@*dùng thư viện "X.PagedList.IPagedList" để hiển thị phân trang lên*@
@model X.PagedList.IPagedList<BTLNetCore6._0.Models.Tintuc> 
@using X.PagedList
@using X.PagedList.Mvc.Core
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row" style="margin-left: 100px">
    <div style="width: 100%">
        <h1>Quản lý tin tức</h1>
        <p>
            <a asp-action="Create">Tạo tin tức</a>
        </p>
        <div>
            <form asp-action="Index" method="get" class="form-inline">
                <label>Nhập thông tin tìm kiếm</label>
                <input type="text" name="name" />
                <label>Id loại tin từ</label>
                <input type="number" name="to" />
                <label>Đến</label>
                <input type="number" name="from" />
                <button type="submit">Tìm kiếm</button>
            </form>

            @*<form asp-action="Index" method="get" asp-controller="AdminTintucs">
                <select asp-items="ViewBag.listLoaTin" name="loaitinId" onchange="forms[0].submit()">
                    <option value="0">Danh sach</option>
                </select>
            </form>*@
        </div>
    </div>

    <br>
    <div style="margin-top: -300px">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Tieude
                    </th>
                    <th>
                        Noidung
                    </th>
                    <th>
                        Hinhanh
                    </th>
                    <th>
                        Ngaytao
                    </th>
                    <th>
                        Loaitin
                    </th>
                    <th>
                        Taikhoan
                    </th>
                    <th>
                        Số điện thoại
                    </th>
                    <th>
                        Lượt click
                    </th>
                    <th>
                        Giá
                    </th>
                    <th>
                        Tên người đăng
                    </th>
                    <th>
                        Ảnh người đăng
                    </th>
                    <th>
                        Gửi xe
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Tieude
                        </td>
                        <td>
                            @item.Noidung
                        </td>
                        <td>
                            <img src="@item.Hinhanh" width="100px" />
                        </td>
                        <td>
                            @item.Ngaytao
                        </td>
                        <td>
                            @item.LoaitinId
                        </td>
                        <td>
                            @item.TaikhoanId
                        </td>
                        <td>
                            @item.Sdt
                        </td>
                        <td>
                            @item.Clicks
                        </td>
                        <td>
                            @item.Gia
                        </td>
                        <td>
                            @item.Tennguoidang
                        </td>
                        <td>
                            @item.Anhnguoidangs
                        </td>
                        <td>
                            @item.Guixe
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div>
            @*"page => Url.Action" nghĩa là page hiện tại trỏ đến Url.Action() để sinh ra 1 Url, sẽ chuyền vào 3 tham số cho Url này là:
            Tham số đầu tiên: Tên của phương thức trong lớp controller
            Tham số thứ 2 là: Tên của controller chứa phương thức đấy
            Tham số thứ 3 là: Chính là Root page của nó (page = page) nghĩa là tham số page chính là giá trị page nhập ở trên Url
            *@
            @Html.PagedListPager(Model, page => Url.Action("Index", "AdminTintucs", new {page = page}))
        </div>
    </div>
   
</div>

