<!DOCTYPE html>
<html lang="en">
<head>
	<title>Colo Shop</title>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="description" content="Colo Shop Template">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" type="text/css" href="~/assian/styles/bootstrap4/bootstrap.min.css">
	<link href="~/assian/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
	<link rel="stylesheet" type="text/css" href="~/assian/plugins/owlcarousel2-2.2.1/owl.carousel.css">
	<link rel="stylesheet" type="text/css" href="~/assian/plugins/owlcarousel2-2.2.1/owl.theme.default.css">
	<link rel="stylesheet" type="text/css" href="~/assian/plugins/owlcarousel2-2.2.1/animate.css">
	<link rel="stylesheet" type="text/css" href="~/assian/styles/main_styles.css">
	<link rel="stylesheet" type="text/css" href="~/assian/styles/responsive.css">

	<style>
		.pagination-container ul li {
			width: 50px;
			height: auto;
			text-align: center;
			background-color: yellow;
			color: black;
			font-weight: bold;
		}
	</style>
</head>

<body>

	<div class="super_container">

		<!-- Header -->
		@await Html.PartialAsync("_Header.cshtml")

		<!--Main-->
		@RenderBody()

		<!-- Footer -->
		@await Html.PartialAsync("_Footer.cshtml")


	</div>

	<script src="~/assian/js/jquery-3.2.1.min.js"></script>
	<script src="~/assian/styles/bootstrap4/popper.js"></script>
	<script src="~/assian/styles/bootstrap4/bootstrap.min.js"></script>
	<script src="~/assian/plugins/isotope/isotope.pkgd.min.js"></script>
	<script src="~/assian/plugins/owlcarousel2-2.2.1/owl.carousel.js"></script>
	<script src="~/assian/plugins/easing/easing.js"></script>
	<script src="~/assian/js/custom.js"></script>
	@await Component.InvokeAsync("Notyf");
	@await RenderSectionAsync("Scripts", required: false);
</body>

</html>
